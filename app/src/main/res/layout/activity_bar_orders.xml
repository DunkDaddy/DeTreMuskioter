<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarOrders">

    <ListView
        android:id="@+id/barWorkingListId"
        android:layout_width="325dp"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        android:background="@color/working"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:text="Orders Waiting"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kitcheUpdateBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="manualViewUpdate"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/barRecievedListId"
        android:layout_width="325dp"
        android:layout_height="600dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8"
        android:background="@color/received"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:text="Orders Awaiting Pickup"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:text="Working on Orders:"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/barAwaitingListId"
        android:layout_width="325dp"
        android:layout_height="600dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintTop_toBottomOf="@id/textView9"
        android:background="@color/await"/>
    <View
        android:id="@+id/divider"
        android:layout_width="5dp"
        android:layout_height="798dp"
        android:background="@color/black"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/barRecievedListId"
        tools:layout_editor_absoluteX="369dp"
        tools:layout_editor_absoluteY="1dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="5dp"
        android:layout_height="798dp"
        android:layout_marginStart="20dp"
        android:background="@color/black"
        app:layout_constraintStart_toEndOf="@id/barWorkingListId"
        tools:layout_editor_absoluteX="717dp"
        tools:layout_editor_absoluteY="1dp" />
</androidx.constraintlayout.widget.ConstraintLayout>