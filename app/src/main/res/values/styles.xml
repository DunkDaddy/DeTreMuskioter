<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="header.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="menu_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="menu_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="menu_scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="menu_linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="menu_scroll_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="menu_scroll_RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="menu_scroll_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="menu_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="menu_item.Name">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="menu_item.Description">
        <item name="android:layout_below">@+id/Dish_Name</item>
        <item name="android:layout_marginStart">-69dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_toEndOf">@+id/Dish_Name</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="menu_item.Price">
        <item name="android:layout_below">@+id/Dish_Description</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_toEndOf">@+id/Dish_Description</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>